{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.tabSize": 2,
  "css.validate": false,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.codeActionsOnSave": ["source.fixAll", "source.organizeImports"]
  }
}
